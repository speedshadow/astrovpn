---
import AdminLayout from '@/layouts/AdminLayout.astro';
import { VpnForm } from '@/components/admin/VpnForm';

const { session } = Astro.locals;

if (!session) {
  return Astro.redirect('/admin/login');
}
---

<AdminLayout title="Add New VPN">
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-3xl font-bold">Add a New VPN</h1>
      <p class="text-muted-foreground">Fill out the form below to add a new VPN to the database.</p>
    </div>
  </div>

  <VpnForm client:only="react" />

</AdminLayout>
