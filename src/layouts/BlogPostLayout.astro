---
import Layout from './Layout.astro';
import { format } from 'date-fns';

const { frontmatter } = Astro.props;
---

<Layout title={`${frontmatter.title} | AstroVPN Blog`}>
  <article class="container mx-auto px-4 py-12">
    <header class="text-center mb-12">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">{frontmatter.title}</h1>
      <div class="text-muted-foreground text-sm">
        <span>By {frontmatter.author}</span> &bull;
        <time datetime={frontmatter.pubDate}>
          {format(new Date(frontmatter.pubDate), 'MMMM d, yyyy')}
        </time>
      </div>
    </header>

    <img src={frontmatter.heroImage} alt={`Hero image for ${frontmatter.title}`} class="rounded-lg mb-12 w-full max-h-[500px] object-cover" />

    <div class="prose prose-invert lg:prose-xl mx-auto max-w-3xl">
      <slot />
    </div>

    <div class="text-center mt-16">
      <a href="/blog" class="text-primary hover:underline">‚Üê Back to Blog</a>
    </div>
  </article>
</Layout>
